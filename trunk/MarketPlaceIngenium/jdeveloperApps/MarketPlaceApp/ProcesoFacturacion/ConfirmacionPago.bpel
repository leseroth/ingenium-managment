<process name="ConfirmacionPago"
         targetNamespace="http://xmlns.oracle.com/MarketPlace_jws/ProcesoFacturacion/ConfirmacionPago"
         xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:client="http://xmlns.oracle.com/MarketPlace_jws/ProcesoFacturacion/ConfirmacionPago"
         xmlns:ora="http://schemas.oracle.com/xpath/extension"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://marketplace.losalpes.com.co/GestionFacturacion"
         xmlns:ns2="http://marketplace.losalpes.com.co"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:bpel2="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap">

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
    <partnerLinks>
        <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
        <partnerLink name="confirmacionpago_client" partnerLinkType="client:ConfirmacionPago" myRole="ConfirmacionPagoProvider" partnerRole="ConfirmacionPagoRequester"/>
        <partnerLink name="GestionFacturacion"
                     partnerRole="GestionFacturacion_Role"
                     partnerLinkType="ns1:GestionFacturacion_PL"/>
    </partnerLinks>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        VARIABLES                                                        
        List of messages and XML documents used within this BPEL process 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <variables>
        <!-- Reference to the message passed as input during initiation -->
        <variable name="inputVariable" messageType="client:ConfirmacionPagoRequestMessage"/>

        <!-- Reference to the message that will be sent back to the requester during callback -->
        <variable name="outputVariable" messageType="client:ConfirmacionPagoResponseMessage"/>
        <variable name="registrarTransaccion"
                  messageType="ns1:registrarTransaccionRequest"/>
        <variable name="registrarTransaccionResponse"
                  messageType="ns1:registrarTransaccionResponse"/>
    </variables>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
       ORCHESTRATION LOGIC                                               
       Set of activities coordinating the flow of messages across the    
       services integrated within this business process                  
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <sequence name="main">
        <!-- Receive input from requestor. (Note: This maps to operation defined in ConfirmacionPago.wsdl) -->
        <receive name="receiveInput" partnerLink="confirmacionpago_client" portType="client:ConfirmacionPago" operation="process" variable="inputVariable" createInstance="yes"/>

        <!-- 
          Asynchronous callback to the requester. (Note: the callback location and correlation id is transparently handled using WS-addressing.)
        -->
        <assign name="AsignarRegistroTransaccion">
            <copy>
                <from variable="inputVariable" part="referencia"
                      query="/client:process/client:numCuenta"/>
                <to variable="registrarTransaccion" part="parameters"
                    query="/ns2:registrarTransaccion/ns2:numCuenta"/>
            </copy>
            <copy>
                <from expression=" - bpws:getVariableData('inputVariable','referencia','/client:process/client:valor')"/>
                <to variable="registrarTransaccion" part="parameters"
                    query="/ns2:registrarTransaccion/ns2:transaccion/valor"/>
            </copy>
            <copy>
                <from variable="inputVariable" part="referencia"
                      query="/client:process/client:descripcion"/>
                <to variable="registrarTransaccion" part="parameters"
                    query="/ns2:registrarTransaccion/ns2:transaccion/descripcion"/>
            </copy>
            <copy>
                <from expression="ora:getCurrentDate()"/>
                <to variable="registrarTransaccion" part="parameters"
                    query="/ns2:registrarTransaccion/ns2:transaccion/fecha"/>
            </copy>
            <copy>
                <from variable="inputVariable" part="referencia"
                      query="/client:process/client:referencia"/>
                <to variable="registrarTransaccion" part="parameters"
                    query="/ns2:registrarTransaccion/ns2:transaccion/referencia"/>
            </copy>
        </assign>
        <invoke name="RegistrarTransaccion"
                inputVariable="registrarTransaccion"
                outputVariable="registrarTransaccionResponse"
                partnerLink="GestionFacturacion"
                portType="ns1:GestionFacturacion"
                operation="registrarTransaccion"/>
        <assign name="AsignarResultado">
            <copy>
                <from variable="registrarTransaccionResponse" part="parameters"
                      query="/ns2:registrarTransaccionResponse/ns2:resultado"/>
                <to variable="outputVariable" part="resultado"
                    query="/client:processResponse/client:resultado"/>
            </copy>
        </assign>
        <invoke name="callbackClient" partnerLink="confirmacionpago_client" portType="client:ConfirmacionPagoCallback" operation="processResponse" inputVariable="outputVariable"/>
    </sequence>
</process>