<process name="PurchaseOrderDirect"
         targetNamespace="http://xmlns.oracle.com/MarketPlace/ProcesoOrdenCompra/PurchaseOrderDirect"
         xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:client="http://xmlns.oracle.com/MarketPlace/ProcesoOrdenCompra/PurchaseOrderDirect"
         xmlns:ora="http://schemas.oracle.com/xpath/extension"
         xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://ws.pomanager.marketplace.losalpes.com.co/"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:bpel2="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:ns2="http://xmlns.oracle.com/MarketPlace/ProcesoOrdenCompra/PurchaseOrderDirect/correlationset">

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
    <partnerLinks>
        <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
        <partnerLink name="purchaseorderdirect_client" partnerLinkType="client:PurchaseOrderDirect" myRole="PurchaseOrderDirectProvider" partnerRole="PurchaseOrderDirectRequester"/>
        <partnerLink name="GestionPO" partnerLinkType="ns1:GestionPO"
                     partnerRole="PoManagerPoManagement"/>
    </partnerLinks>

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        VARIABLES                                                        
        List of messages and XML documents used within this BPEL process 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <variables>
        <!-- Reference to the message passed as input during initiation -->
        <variable name="inputVariable" messageType="client:PurchaseOrderDirectRequestMessage"/>

        <!-- Reference to the message that will be sent back to the requester during callback -->
        <variable name="outputVariable" messageType="client:PurchaseOrderDirectResponseMessage"/>
        <variable name="RegistrarPO_registrarPO_InputVariable"
                  messageType="ns1:registrarPO"/>
        <variable name="RegistrarPO_registrarPO_OutputVariable"
                  messageType="ns1:registrarPOResponse"/>
        <variable name="Aprobar_Aprobar_InputVariable"
                  messageType="client:PurchaseOrderDirectAprobar"/>
        <variable name="ActualizarEstado_actualizarEstadoPO_InputVariable"
                  messageType="ns1:actualizarEstadoPO"/>
        <variable name="ActualizarEstado_actualizarEstadoPO_OutputVariable"
                  messageType="ns1:actualizarEstadoPOResponse"/>
    </variables>
    <correlationSets>
        <correlationSet name="NumSegumiento"
                        properties="ns2:NumSeguimiento"/>
    </correlationSets>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
       ORCHESTRATION LOGIC                                               
       Set of activities coordinating the flow of messages across the    
       services integrated within this business process                  
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    -->
    <sequence name="main">
        <!-- Receive input from requestor. (Note: This maps to operation defined in PurchaseOrderDirect.wsdl) -->
        <receive name="receiveInput" partnerLink="purchaseorderdirect_client" portType="client:PurchaseOrderDirect" operation="process" variable="inputVariable" createInstance="yes"/>

        <!-- 
          Asynchronous callback to the requester. (Note: the callback location and correlation id is transparently handled using WS-addressing.)
        -->
        <assign name="Assign1">
            <copy>
                <from variable="inputVariable" part="payload"
                      query="/client:process/client:nitComercio"/>
                <to variable="RegistrarPO_registrarPO_InputVariable"
                    part="parameters"
                    query="/ns1:registrarPO/purchaseOrderBO/comercioBO/nit"/>
            </copy>
            <copy>
                <from variable="inputVariable" part="payload"
                      query="/client:process/client:nitFabricante"/>
                <to variable="RegistrarPO_registrarPO_InputVariable"
                    part="parameters"
                    query="/ns1:registrarPO/purchaseOrderBO/fabricanteBO/nit"/>
            </copy>
            <copy>
                <from variable="inputVariable" part="payload"
                      query="/client:process/client:fechaMaximaEntrega"/>
                <to variable="RegistrarPO_registrarPO_InputVariable"
                    part="parameters"
                    query="/ns1:registrarPO/purchaseOrderBO/entrega"/>
            </copy>
            <copy>
                <from variable="inputVariable" part="payload"
                      query="/client:process/client:cantidadProducto"/>
                <to variable="RegistrarPO_registrarPO_InputVariable"
                    part="parameters"
                    query="/ns1:registrarPO/purchaseOrderBO/itemPOBOList/cantidad"/>
            </copy>
            <copy>
                <from variable="inputVariable" part="payload"
                      query="/client:process/client:nombreProducto"/>
                <to variable="RegistrarPO_registrarPO_InputVariable"
                    part="parameters"
                    query="/ns1:registrarPO/purchaseOrderBO/itemPOBOList/productoBO/nombre"/>
            </copy>
            <copy>
                <from variable="inputVariable" part="payload"
                      query="/client:process/client:categoriaProducto"/>
                <to variable="RegistrarPO_registrarPO_InputVariable"
                    part="parameters"
                    query="/ns1:registrarPO/purchaseOrderBO/itemPOBOList/productoBO/categoria"/>
            </copy>
            <copy>
                <from variable="inputVariable" part="payload"
                      query="/client:process/client:precioProducto"/>
                <to variable="RegistrarPO_registrarPO_InputVariable"
                    part="parameters"
                    query="/ns1:registrarPO/purchaseOrderBO/itemPOBOList/productoBO/precio"/>
            </copy>
        </assign>
        <invoke name="RegistrarPO"
                inputVariable="RegistrarPO_registrarPO_InputVariable"
                outputVariable="RegistrarPO_registrarPO_OutputVariable"
                partnerLink="GestionPO" portType="ns1:PoManagerPoManagement"
                operation="registrarPO" bpelx:invokeAsDetail="no">
            <correlations>
                <correlation set="NumSegumiento" initiate="yes" pattern="in"/>
            </correlations>
        </invoke>
        <receive name="Aprobar" createInstance="no"
                 variable="Aprobar_Aprobar_InputVariable"
                 partnerLink="purchaseorderdirect_client"
                 portType="client:PurchaseOrderDirect" operation="Aprobar">
            <correlations>
                <correlation set="NumSegumiento" initiate="no"/>
            </correlations>
        </receive>
        <assign name="Assign3">
            <copy>
                <from variable="Aprobar_Aprobar_InputVariable" part="abcde"
                      query="/client:aprobacion/client:numSeguimiento"/>
                <to variable="ActualizarEstado_actualizarEstadoPO_InputVariable"
                    part="parameters"
                    query="/ns1:actualizarEstadoPO/numSeguimiento"/>
            </copy>
            <copy>
                <from variable="Aprobar_Aprobar_InputVariable" part="abcde"
                      query="/client:aprobacion/client:estado"/>
                <to variable="ActualizarEstado_actualizarEstadoPO_InputVariable"
                    part="parameters" query="/ns1:actualizarEstadoPO/estado"/>
            </copy>
        </assign>
        <invoke name="ActualizarEstado"
                inputVariable="ActualizarEstado_actualizarEstadoPO_InputVariable"
                outputVariable="ActualizarEstado_actualizarEstadoPO_OutputVariable"
                partnerLink="GestionPO" portType="ns1:PoManagerPoManagement"
                operation="actualizarEstadoPO" bpelx:invokeAsDetail="no"/>
        <assign name="Assign4">
            <copy>
                <from variable="ActualizarEstado_actualizarEstadoPO_OutputVariable"
                      part="parameters"
                      query="/ns1:actualizarEstadoPOResponse/return"/>
                <to variable="outputVariable" part="payload"
                    query="/client:processResponse/client:NumSeguimiento"/>
            </copy>
        </assign>
        <invoke name="callbackClient" partnerLink="purchaseorderdirect_client" portType="client:PurchaseOrderDirectCallback" operation="processResponse" inputVariable="outputVariable"/>
    </sequence>
</process>